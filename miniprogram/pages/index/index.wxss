/**index.wxss**/

page{
  width: 100%;
  height: 100%;
}
#map{
  width: 100%;
  height: 80%;
}
/*对于图标来说，大概的图标的大小就是80rpx左右*/

.icon-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 87rpx;
  margin-top: 30rpx;
  height: 136rpx;
  opacity: .6;
}
.icon-container cover-image{
  width: 60rpx;
  height: 60rpx;
}


.btn-container {
  width: 600rpx;
  margin-left: 75rpx;
  bottom: 7%;
  position: absolute;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: .8;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  width: 600rpx;
  bottom: 7%;
  position: absolute;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container{
  width: 600rpx;
  margin-left: 75rpx;
  bottom: 7%;
  position: absolute;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-motto {
  background: linear-gradient(to right, red, blue);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-size: 50rpx;
}